<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_statusdia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:text="Upload Profile Image"
            android:textColor="@color/teal_700"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/imageViewUploadProfile"
            android:layout_width="330dp"
            android:layout_height="330dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_baseline_file_upload_24"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/dashed_border"
            tools:ignore="VectorDrawableCompat"
            android:scaleType="fitCenter"/>

        <Button
            android:id="@+id/browseBtnProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/custon_background"
            android:text="@string/browse"
            android:textColor="#fff"
            android:textStyle="bold"
            app:backgroundTint="@color/teal_700" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >

            <Button
                android:id="@+id/uploadBtnProfile"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/custon_background"
                android:padding="6dp"
                android:text="Set"
                android:layout_gravity="center_horizontal"
                android:textColor="#fff"
                android:textStyle="bold"
                app:backgroundTint="@color/teal_700" />

            <Button
                android:id="@+id/closeBtnProfile"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/custon_background"
                android:padding="6dp"
                android:text="@string/close_status"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_horizontal"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_marginBottom="15dp"
                app:backgroundTint="@color/teal_700" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>